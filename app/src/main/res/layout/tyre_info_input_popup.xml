<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/popup_background"
    android:stretchColumns="2">

    <TableRow
        android:id="@+id/rf_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Right Front"
                android:textColor="@color/read_successfully" />

            <EditText
                android:id="@+id/rf_dimension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="2.0(mm)"
                android:inputType="numberDecimal"
                android:textColor="@color/read_successfully"
                android:textColorHint="@color/light_green_hint_text" />
        </LinearLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/read_successfully" />

        <EditText
            android:id="@+id/rf_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Details"
            android:textColor="@color/read_successfully"
            android:textColorHint="@color/light_green_hint_text" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_span="3"
            android:background="@color/read_successfully" />
    </TableRow>

    <TableRow
        android:id="@+id/rb_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Right Back"
                android:textColor="@color/read_successfully" />

            <EditText
                android:id="@+id/rb_dimension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="2.0(mm)"
                android:inputType="numberDecimal"
                android:textColor="@color/read_successfully"
                android:textColorHint="@color/light_green_hint_text" />
        </LinearLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/read_successfully" />

        <EditText
            android:id="@+id/rb_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Details"
            android:textColor="@color/read_successfully"
            android:textColorHint="@color/light_green_hint_text" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_span="3"
            android:background="@color/read_successfully" />
    </TableRow>

    <TableRow
        android:id="@+id/lf_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Left Front"
                android:textColor="@color/read_successfully" />

            <EditText
                android:id="@+id/lf_dimension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="2.0(mm)"
                android:inputType="numberDecimal"
                android:textColor="@color/read_successfully"
                android:textColorHint="@color/light_green_hint_text" />
        </LinearLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/read_successfully" />

        <EditText
            android:id="@+id/lf_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Details"
            android:textColor="@color/read_successfully"
            android:textColorHint="@color/light_green_hint_text" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_span="3"
            android:background="@color/read_successfully" />
    </TableRow>

    <TableRow
        android:id="@+id/lb_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Left Back"
                android:textColor="@color/read_successfully" />

            <EditText
                android:id="@+id/lb_dimension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="2.0(mm)"
                android:inputType="numberDecimal"
                android:textColor="@color/read_successfully"
                android:textColorHint="@color/light_green_hint_text" />
        </LinearLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/read_successfully" />

        <EditText
            android:id="@+id/lb_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Details"
            android:textColor="@color/read_successfully"
            android:textColorHint="@color/light_green_hint_text" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_span="3"
            android:background="@color/read_successfully" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/backwheel_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="FW size" />

            <EditText
                android:id="@+id/frontwheel_size_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:hint="205/55-16"
                android:inputType="textPersonName"
                android:textColor="@color/read_successfully"
                android:textColorHint="@color/light_green_hint_text" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@color/read_successfully" />

            <TextView
                android:id="@+id/frontwheel_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="BW size" />

            <EditText
                android:id="@+id/backwheel_size_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:hint="205/55-16"
                android:inputType="textPersonName"
                android:textColor="@color/read_successfully"
                android:textColorHint="@color/light_green_hint_text" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_span="3"
            android:background="@color/read_successfully" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/brand_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Brand Name" />

            <EditText
                android:id="@+id/brandane__input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:hint="Brand Name"
                android:inputType="textPersonName"
                android:textColor="@color/read_successfully"
                android:textColorHint="@color/light_green_hint_text" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_span="3"
            android:background="@color/read_successfully" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:id="@+id/buttonGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/winter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="winter"
                android:textColor="@color/read_successfully" />

            <RadioButton
                android:id="@+id/summer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="summer"
                android:textColor="@color/read_successfully" />
        </RadioGroup>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_span="3"
            android:background="@color/read_successfully" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/update_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/read_successfully"
                android:padding="8dp"
                android:text="Update" />

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="8dp"
                android:text="Cancel" />
        </LinearLayout>
    </TableRow>
</TableLayout>
